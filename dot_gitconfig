[credential]
    credentialStore = gpg
    helper = store
[pull]
    rebase = false
[init]
    defaultbranch = main
[core]
    autocrlf = input
    pager = delta
[merge]
    tool = nvimdiff
    conflictStyle = zdiff3
[diff]
	tool = nvimdiff
[difftool]
    prompt = false
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    side-by-side = true
    dark = true
    minus-style = "#ea6962" bold "#3c1f1e"
    plus-style = "#a9b665" bold "#1f2d1f"
[difftool "nvimdiff"]
	cmd = nvim -d \"$LOCAL\" \"$REMOTE\"
[mergetool "nvimdiff"]
	cmd = nvim -d \"$LOCAL\" \"$BASE\" \"$REMOTE\" \"$MERGED\"
